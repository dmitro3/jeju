{
  "$schema": "../../packages/config/jeju-manifest.schema.json",
  "name": "node",
  "displayName": "Network Node",
  "version": "1.0.0",
  "type": "core",
  "description": "Run infrastructure nodes (compute, storage, CDN, proxy) and earn rewards",
  "commands": {
    "dev": "bun run dev",
    "dev:app": "bun run dev:app",
    "build": "bun run build",
    "build:app": "bun run build:app",
    "test": "bun run test"
  },
  "ports": {
    "main": 1420,
    "cdn": 4020,
    "proxy": 4025,
    "compute": 4026,
    "database": 4661
  },
  "dependencies": ["contracts", "config", "dws"],
  "optional": false,
  "enabled": true,
  "autoStart": true,
  "tags": ["node", "infrastructure", "operator", "cdn", "storage", "compute", "proxy", "database", "sqlit", "miner", "rewards"],
  "lander": {
    "enabled": true,
    "type": "downloads",
    "buildDir": "dist/lander",
    "routes": {
      "/": "landing page with desktop downloads"
    }
  },
  "release": {
    "type": "desktop",
    "platforms": ["macos", "windows", "linux"],
    "hasDownloads": true,
    "buildCommand": "bun run build:app"
  },
  "jns": {
    "name": "node.jeju",
    "description": "Network Node Operator Dashboard",
    "url": "https://node.jejunetwork.org"
  },
  "healthCheck": {
    "url": "http://localhost:1420/health",
    "interval": 30000
  },
  "agent": {
    "enabled": true,
    "a2aEndpoint": "/a2a",
    "mcpEndpoint": "/mcp",
    "tags": ["jeju-app", "node", "operator", "infrastructure"],
    "metadata": {
      "category": "infrastructure",
      "provider": "jeju-network",
      "features": ["cdn-edge", "storage-node", "compute-node", "proxy-node", "database-miner"]
    },
    "trustModels": ["staked"],
    "x402Support": false,
    "jnsName": "node.jeju"
  },
  "dws": {
    "cdn": {
      "enabled": true,
      "regions": ["global"],
      "staticDir": "dist",
      "cacheRules": [
        { "pattern": "/assets/**", "ttl": 31536000, "immutable": true },
        { "pattern": "/*.js", "ttl": 86400 },
        { "pattern": "/*.css", "ttl": 86400 },
        { "pattern": "/**/*.html", "ttl": 60, "staleWhileRevalidate": 3600 }
      ]
    }
  },
  "decentralization": {
    "cdn": {
      "enabled": true,
      "regions": ["global"],
      "cacheRules": [
        { "pattern": "/assets/**", "ttl": 31536000, "immutable": true },
        { "pattern": "/api/**", "ttl": 0 }
      ],
      "serviceWorker": true
    },
    "frontend": {
      "ipfs": true,
      "jnsName": "node.jeju",
      "buildDir": "dist",
      "spa": true
    },
    "robustness": {
      "multiOrigin": true,
      "offlineSupport": true,
      "p2pFallback": true,
      "contentAddressed": true
    }
  },
  "testing": {
    "unit": {
      "command": "bun test src/ --timeout 30000",
      "timeout": 120000
    },
    "e2e": {
      "command": "bunx playwright test tests/e2e",
      "timeout": 300000,
      "requiresChain": true
    }
  }
}

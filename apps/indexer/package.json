{
  "name": "@jejunetwork/indexer",
  "version": "0.1.0",
  "description": "Comprehensive blockchain indexer for Jeju",
  "scripts": {
    "postinstall": "node patches/apollo-fix.js 2>/dev/null || true",
    "dev": "concurrently --kill-others \"DB_HOST=localhost DB_PORT=23798 DB_NAME=indexer DB_USER=postgres DB_PASS=postgres sqd process:dev\" \"DB_HOST=localhost DB_PORT=23798 DB_NAME=indexer DB_USER=postgres DB_PASS=postgres GQL_PORT=4350 sqd serve\" \"DB_PORT=23798 bun run api:all\"",
    "build": "rm -rf lib && tsc",
    "test": "bun test test/",
    "typecheck": "tsc --noEmit",
    "api:all": "node lib/api-server.js"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.4.0",
    "@jejunetwork/db": "workspace:*",
    "@jejunetwork/types": "workspace:*",
    "@subsquid/evm-abi": "0.3.0",
    "@subsquid/evm-codec": "0.3.0",
    "@subsquid/evm-processor": "1.19.1",
    "@subsquid/typeorm-migration": "1.3.0",
    "@subsquid/typeorm-store": "1.5.1",
    "@subsquid/util-internal": "3.2.0",
    "elysia": "^1.4.19",
    "pg": "8.16.0",
    "typeorm": "0.3.26",
    "viem": "2.43.3",
    "zod": "4.2.1"
  },
  "devDependencies": {
    "@playwright/test": "1.57.0",
    "@subsquid/typeorm-codegen": "2.0.2",
    "@types/node": "22.15.30",
    "autocannon": "8.0.0",
    "concurrently": "9.1.0",
    "typescript": "5.9.3"
  }
}

{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".",
    "noEmit": true,
    "skipLibCheck": true,
    "types": ["bun"]
  },
  "include": ["api/**/*", "lib/**/*", "src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "api/**/*.test.ts",
    "api/**/*-test.ts",
    "api/**/__tests__/**",
    "tests/**/*",
    "api/email",
    "api/email/**",
    "src/email",
    "src/email/**",
    "api/dns/**",
    "api/workers/workerd/**",
    "web/**/*"
  ]
}

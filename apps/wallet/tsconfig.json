{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./api/*", "./web/*"],
      "@sdk/*": ["./api/sdk/*"],
      "@hooks/*": ["./web/hooks/*"],
      "@components/*": ["./web/components/*"],
      "@platform/*": ["./web/platform/*"]
    },
    "types": ["@types/chrome", "bun"]
  },
  "include": ["api/**/*", "web/**/*", "lib/**/*", "extension/**/*"],
  "exclude": ["**/*.test.ts", "**/*.test.tsx", "tests/**/*"]
}

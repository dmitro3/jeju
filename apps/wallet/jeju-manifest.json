{
  "$schema": "../../packages/config/jeju-manifest.schema.json",
  "name": "wallet",
  "displayName": "Network Wallet",
  "version": "0.1.0",
  "type": "core",
  "description": "Agentic multi-chain wallet with seamless cross-chain UX. No chain switching, bridgeless transfers via EIL/OIF, account abstraction (ERC-4337), multi-token gas payment. Supports Ethereum, all major L2s, and Solana.",
  "commands": {
    "dev": "bun run dev",
    "dev:app": "bun run dev:app",
    "build": "bun run build",
    "build:app": "bun run build:app",
    "build:ext": "bun run build:ext",
    "build:mobile": "bun run build:mobile",
    "test": "bun run test"
  },
  "ports": {
    "main": 4015,
    "ws": 4016
  },
  "dependencies": ["contracts", "config", "dws"],
  "optional": false,
  "enabled": true,
  "autoStart": true,
  "tags": ["wallet", "cross-chain", "eil", "oif", "account-abstraction", "erc-4337", "bridgeless", "multi-chain", "tauri", "capacitor", "solana"],
  "lander": {
    "enabled": true,
    "type": "downloads",
    "buildDir": "dist",
    "routes": {
      "/": "landing page with extension downloads"
    }
  },
  "release": {
    "type": "extension",
    "platforms": ["chrome", "firefox", "edge"],
    "hasDownloads": true,
    "buildCommand": "bun run build:ext"
  },
  "jns": {
    "name": "wallet.jeju",
    "description": "Network Agentic Wallet",
    "url": "https://wallet.jejunetwork.org"
  },
  "healthCheck": {
    "url": "http://localhost:4015/health",
    "interval": 30000
  },
  "agent": {
    "enabled": true,
    "a2aEndpoint": "/a2a",
    "mcpEndpoint": "/mcp",
    "tags": ["jeju-app", "wallet", "cross-chain", "intents", "aa"],
    "metadata": {
      "category": "wallet",
      "provider": "jeju-network",
      "features": ["multi-chain", "bridgeless", "aa", "multi-token-gas"]
    },
    "trustModels": ["open"],
    "x402Support": true,
    "jnsName": "wallet.jeju"
  },
  "dws": {
    "cdn": {
      "enabled": true,
      "regions": ["global"],
      "staticDir": "dist",
      "cacheRules": [
        { "pattern": "/assets/**", "ttl": 31536000, "immutable": true },
        { "pattern": "/*.js", "ttl": 86400 },
        { "pattern": "/*.css", "ttl": 86400 },
        { "pattern": "/**/*.html", "ttl": 60, "staleWhileRevalidate": 3600 }
      ]
    }
  },
  "decentralization": {
    "cdn": {
      "enabled": true,
      "regions": ["global"],
      "cacheRules": [
        { "pattern": "/assets/**", "ttl": 31536000, "immutable": true },
        { "pattern": "/api/**", "ttl": 0 },
        { "pattern": "/**/*.html", "ttl": 60, "staleWhileRevalidate": 3600 }
      ],
      "serviceWorker": true
    },
    "frontend": {
      "ipfs": true,
      "arweave": true,
      "jnsName": "wallet.jeju",
      "buildDir": "dist",
      "spa": true,
      "fallbackOrigins": ["https://wallet.jejunetwork.org"]
    },
    "robustness": {
      "multiOrigin": true,
      "offlineSupport": true,
      "p2pFallback": true,
      "contentAddressed": true
    }
  },
  "testing": {
    "unit": {
      "command": "bun test",
      "timeout": 120000
    },
    "e2e": {
      "command": "bunx playwright test",
      "config": "synpress.config.ts",
      "timeout": 600000,
      "requiresChain": true,
      "requiresWallet": true
    },
    "services": ["inference", "indexer"]
  }
}

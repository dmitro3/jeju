{
  "$schema": "../../packages/config/jeju-manifest.schema.json",
  "name": "documentation",
  "displayName": "Documentation",
  "version": "1.0.0",
  "type": "core",
  "description": "VitePress documentation site - fully decentralized and cached",
  "commands": {
    "dev": "bun run dev",
    "build": "bun run build",
    "start": "bun run preview"
  },
  "ports": {
    "main": 4055
  },
  "dependencies": [],
  "optional": true,
  "enabled": true,
  "autoStart": true,
  "tags": [
    "docs",
    "documentation",
    "vitepress"
  ],
  "jns": {
    "name": "docs.jeju",
    "description": "Network Documentation",
    "url": "https://docs.jejunetwork.org"
  },
  "healthCheck": {
    "url": "http://localhost:4055",
    "interval": 30000
  },
  "agent": {
    "enabled": true,
    "a2aEndpoint": "/a2a",
    "mcpEndpoint": "/mcp",
    "tags": [
      "jeju-app",
      "documentation"
    ],
    "metadata": {
      "category": "documentation",
      "provider": "jeju-network",
      "features": [
        "search",
        "versioning"
      ]
    },
    "trustModels": [
      "open"
    ],
    "x402Support": false,
    "jnsName": "docs.jeju"
  },
  "dws": {
    "cdn": {
      "enabled": true,
      "regions": [
        "global"
      ],
      "staticDir": "docs/dist",
      "cacheRules": [
        {
          "pattern": "/assets/**",
          "ttl": 31536000,
          "immutable": true
        },
        {
          "pattern": "/*.js",
          "ttl": 86400
        },
        {
          "pattern": "/*.css",
          "ttl": 86400
        },
        {
          "pattern": "/**/*.html",
          "ttl": 3600,
          "staleWhileRevalidate": 86400
        }
      ]
    }
  },
  "decentralization": {
    "cdn": {
      "enabled": true,
      "regions": [
        "global"
      ],
      "cacheRules": [
        {
          "pattern": "/assets/**",
          "ttl": 31536000,
          "immutable": true
        },
        {
          "pattern": "/**/*.html",
          "ttl": 3600,
          "staleWhileRevalidate": 86400
        },
        {
          "pattern": "/**/*.js",
          "ttl": 31536000,
          "immutable": true
        },
        {
          "pattern": "/**/*.css",
          "ttl": 31536000,
          "immutable": true
        }
      ],
      "serviceWorker": true
    },
    "frontend": {
      "ipfs": true,
      "arweave": true,
      "jnsName": "docs.jeju",
      "buildDir": "docs/dist",
      "spa": false
    },
    "robustness": {
      "multiOrigin": true,
      "offlineSupport": true,
      "p2pFallback": true,
      "contentAddressed": true
    }
  },
  "testing": {
    "unit": {
      "command": "bun test tests/unit/",
      "timeout": 60000
    },
    "e2e": {
      "command": "bunx playwright test tests/e2e/",
      "timeout": 300000
    }
  },
  "architecture": {
    "type": "hybrid",
    "frontend": {
      "type": "spa",
      "builder": "bun",
      "entrypoint": "index.html",
      "outputDir": "docs/dist"
    }
  }
}

{
  "name": "@jejunetwork/crucible",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Decentralized agent orchestration platform - autonomous AI agents with serverless compute, storage, and coordination",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "bun run src/server.ts",
    "executor": "bun run src/executor/index.ts",
    "autonomous": "bun run src/autonomous/daemon.ts",
    "bot": "bun run src/bots/api-server.ts",
    "test": "bun test",
    "test:e2e": "npx playwright test --config synpress.config.ts",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist out cache test-results"
  },
  "dependencies": {
    "@elizaos/core": "^1.6.6",
    "@hono/node-server": "^1.19.7",
    "@jejunetwork/config": "workspace:*",
    "@jejunetwork/db": "workspace:*",
    "@jejunetwork/shared": "workspace:*",
    "@jejunetwork/sdk": "workspace:*",
    "@jejunetwork/training": "workspace:*",
    "@jejunetwork/eliza-plugin": "workspace:*",
    "@solana/web3.js": "1.98.4",
    "hono": "4.11.1",
    "viem": "2.43.2",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@jejunetwork/tests": "workspace:*",
    "@playwright/test": "1.57.0",
    "@synthetixio/synpress": "4.1.1",
    "@types/bun": "latest",
    "typescript": "5.9.3"
  }
}

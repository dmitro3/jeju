{
  "$schema": "../../packages/config/jeju-manifest.schema.json",
  "name": "crucible",
  "displayName": "Crucible",
  "version": "1.0.0",
  "type": "core",
  "description": "Decentralized agent orchestration platform for autonomous AI agents",
  "commands": {
    "dev": "bun run dev",
    "build": "bun run build",
    "start": "bun run api/worker.ts",
    "test": "bun test"
  },
  "ports": {
    "main": 4020,
    "api": 4021
  },
  "dependencies": [
    "contracts",
    "config",
    "dws"
  ],
  "optional": false,
  "enabled": true,
  "autoStart": true,
  "tags": [
    "agents",
    "orchestration",
    "ai",
    "automation",
    "triggers",
    "rooms"
  ],
  "jns": {
    "name": "crucible.jeju",
    "description": "Agent Orchestration Platform",
    "testnet": "https://crucible.testnet.jejunetwork.org",
    "mainnet": "https://crucible.jejunetwork.org"
  },
  "healthCheck": {
    "url": "http://localhost:4021/health",
    "interval": 30000
  },
  "agent": {
    "enabled": true,
    "a2aEndpoint": "/a2a",
    "mcpEndpoint": "/mcp",
    "tags": [
      "jeju-app",
      "agents",
      "orchestration",
      "automation"
    ],
    "metadata": {
      "category": "infrastructure",
      "provider": "jeju-network",
      "features": [
        "agent-rooms",
        "triggers",
        "vault",
        "identity"
      ]
    },
    "trustModels": [
      "open",
      "staked"
    ],
    "x402Support": true,
    "jnsName": "crucible.jeju"
  },
  "dws": {
    "backend": {
      "enabled": true,
      "runtime": "workerd",
      "entrypoint": "api/worker.ts",
      "memory": 512,
      "timeout": 30000,
      "minInstances": 1,
      "maxInstances": 10,
      "teeRequired": false,
      "regions": [
        "global"
      ]
    },
    "cron": [
      {
        "name": "agent-tick",
        "schedule": "*/2 * * * *",
        "endpoint": "/api/cron/agent-tick",
        "timeout": 60000,
        "description": "Execute autonomous agent ticks with trajectory recording"
      },
      {
        "name": "flush-trajectories",
        "schedule": "*/10 * * * *",
        "endpoint": "/api/cron/flush-trajectories",
        "timeout": 30000,
        "description": "Flush trajectory buffer to DWS storage"
      },
      {
        "name": "health-check",
        "schedule": "*/5 * * * *",
        "endpoint": "/api/cron/health-check",
        "timeout": 15000,
        "description": "System health check"
      }
    ]
  },
  "decentralization": {
    "worker": {
      "name": "crucible-api",
      "entrypoint": "api/worker.ts",
      "runtime": "workerd",
      "memory": 512,
      "timeout": 30000,
      "compatibilityDate": "2025-06-01",
      "routes": [
        { "pattern": "/api/*" },
        { "pattern": "/a2a/*" },
        { "pattern": "/mcp/*" },
        { "pattern": "/health" }
      ]
    },
    "cdn": {
      "enabled": true,
      "regions": [
        "global"
      ],
      "cacheRules": [
        {
          "pattern": "/static/**",
          "ttl": 31536000,
          "immutable": true
        },
        {
          "pattern": "/api/**",
          "ttl": 0
        },
        {
          "pattern": "/**/*.html",
          "ttl": 60,
          "staleWhileRevalidate": 3600
        }
      ],
      "serviceWorker": true
    },
    "frontend": {
      "ipfs": true,
      "arweave": true,
      "jnsName": "crucible.jeju",
      "buildDir": "dist/web",
      "spa": true,
      "fallbackOrigins": [
        "https://crucible.testnet.jejunetwork.org",
        "https://crucible.jejunetwork.org"
      ]
    },
    "robustness": {
      "multiOrigin": true,
      "offlineSupport": true,
      "p2pFallback": true,
      "contentAddressed": true
    }
  },
  "testing": {
    "unit": {
      "command": "bun run test",
      "timeout": 120000
    },
    "integration": {
      "command": "bun test src/tests/integration.test.ts",
      "timeout": 300000,
      "requiresServices": true
    },
    "e2e": {
      "command": "bunx playwright test tests/synpress",
      "timeout": 300000,
      "requiresChain": true
    }
  },
  "architecture": {
    "type": "hybrid",
    "frontend": {
      "type": "spa",
      "builder": "bun",
      "entrypoint": "index.html",
      "outputDir": "dist/web"
    }
  }
}

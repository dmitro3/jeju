{
  "$schema": "../../packages/config/jeju-manifest.schema.json",
  "name": "crucible",
  "version": "1.0.0",
  "description": "Decentralized agent orchestration platform for autonomous AI agents",
  "category": "core",
  "ports": {
    "api": 4020,
    "executor": 4021
  },
  "dependencies": {
    "contracts": ["AgentVault", "RoomRegistry", "TriggerRegistry", "ServiceRegistry", "IdentityRegistry"],
    "services": ["dws", "indexer"]
  },
  "environment": {
    "required": ["PRIVATE_KEY", "RPC_URL"],
    "optional": ["DWS_URL", "IPFS_GATEWAY"]
  },
  "healthCheck": {
    "endpoint": "/health",
    "interval": 30
  },
  "testing": {
    "unit": {
      "command": "bun run test",
      "timeout": 120000
    },
    "e2e": {
      "command": "bunx playwright test tests/synpress",
      "timeout": 300000,
      "requiresChain": true
    }
  }
}

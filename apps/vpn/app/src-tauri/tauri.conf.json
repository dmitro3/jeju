{
  "$schema": "https://schema.tauri.app/config/1",
  "package": {
    "productName": "Jeju VPN",
    "version": "0.1.0"
  },
  "build": {
    "beforeDevCommand": "bun run dev:web",
    "devPath": "http://localhost:1421",
    "beforeBuildCommand": "bun run build",
    "distDir": "../dist"
  },
  "tauri": {
    "bundle": {
      "identifier": "network.jeju.vpn",
      "active": true,
      "targets": "all",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "category": "Utility",
      "shortDescription": "Free, decentralized VPN powered by the community",
      "longDescription": "Jeju VPN provides free, unlimited VPN access powered by a global network of community nodes.",
      "appimage": {
        "bundleMediaFramework": true
      },
      "deb": {
        "depends": []
      },
      "macOS": {
        "minimumSystemVersion": "10.15"
      },
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; connect-src 'self' wss://*.jejunetwork.org https://*.jejunetwork.org; font-src 'self' data:"
    },
    "windows": [
      {
        "title": "Jeju VPN",
        "width": 420,
        "height": 680,
        "minWidth": 380,
        "minHeight": 600,
        "maxWidth": 600,
        "maxHeight": 900,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false,
        "center": true,
        "visible": true
      }
    ],
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false
    },
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "os": {
        "all": true
      },
      "process": {
        "all": true
      },
      "window": {
        "all": true
      }
    }
  }
}

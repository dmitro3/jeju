{
  "$schema": "../../packages/config/jeju-manifest.schema.json",
  "name": "otto",
  "displayName": "Otto",
  "version": "1.0.0",
  "type": "core",
  "description": "Decentralized multi-platform AI trading agent - Trade, bridge, and launch tokens via Discord, Telegram, WhatsApp, Farcaster, and Twitter/X",
  "commands": {
    "dev": "bun run dev",
    "build": "bun run build",
    "start": "bun run start",
    "test": "bun run test"
  },
  "ports": {
    "main": 4050,
    "api": 4050,
    "webhooks": 4051
  },
  "dependencies": [
    "contracts",
    "config",
    "dws",
    "gateway",
    "bazaar",
    "crucible"
  ],
  "optional": false,
  "enabled": true,
  "autoStart": true,
  "tags": [
    "agents",
    "trading",
    "ai",
    "discord",
    "telegram",
    "whatsapp",
    "farcaster",
    "twitter",
    "defi",
    "cross-chain"
  ],
  "jns": {
    "name": "otto.jeju",
    "description": "Multi-Platform Trading Agent",
    "url": "https://otto.jejunetwork.org"
  },
  "healthCheck": {
    "url": "http://localhost:4050/health",
    "interval": 30000
  },
  "env": {
    "DISCORD_BOT_TOKEN": {
      "required": false,
      "description": "Discord bot token for Discord integration"
    },
    "DISCORD_APPLICATION_ID": {
      "required": false,
      "description": "Discord application ID for slash commands"
    },
    "TELEGRAM_BOT_TOKEN": {
      "required": false,
      "description": "Telegram bot token for Telegram integration"
    },
    "TWILIO_ACCOUNT_SID": {
      "required": false,
      "description": "Twilio account SID for WhatsApp integration"
    },
    "TWILIO_AUTH_TOKEN": {
      "required": false,
      "description": "Twilio auth token for WhatsApp integration"
    },
    "TWILIO_WHATSAPP_NUMBER": {
      "required": false,
      "description": "Twilio WhatsApp number (format: whatsapp:+1234567890)"
    },
    "NEYNAR_API_KEY": {
      "required": false,
      "description": "Neynar API key for Farcaster integration"
    },
    "FARCASTER_BOT_FID": {
      "required": false,
      "description": "Farcaster FID for the bot account"
    },
    "FARCASTER_SIGNER_UUID": {
      "required": false,
      "description": "Farcaster signer UUID for posting"
    },
    "TWITTER_BEARER_TOKEN": {
      "required": false,
      "description": "Twitter API bearer token for Twitter/X integration"
    },
    "TWITTER_API_KEY": {
      "required": false,
      "description": "Twitter API key"
    },
    "TWITTER_API_SECRET": {
      "required": false,
      "description": "Twitter API secret"
    },
    "TWITTER_BOT_USERNAME": {
      "required": false,
      "description": "Twitter bot username (without @)"
    }
  },
  "agent": {
    "enabled": true,
    "a2aEndpoint": "/a2a",
    "mcpEndpoint": "/mcp",
    "tags": [
      "jeju-app",
      "trading",
      "defi",
      "cross-chain",
      "ai-agent"
    ],
    "metadata": {
      "category": "trading",
      "provider": "jeju-network",
      "features": [
        "swap",
        "bridge",
        "token-launch",
        "portfolio",
        "limit-orders",
        "cross-chain"
      ]
    },
    "trustModels": [
      "open",
      "staked"
    ],
    "x402Support": true,
    "jnsName": "otto.jeju"
  },
  "dws": {
    "backend": {
      "enabled": true,
      "runtime": "workerd",
      "entrypoint": "api/worker.ts",
      "memory": 512,
      "timeout": 30000,
      "minInstances": 1,
      "maxInstances": 5,
      "teeRequired": false,
      "regions": [
        "global"
      ]
    },
    "tee": {
      "platform": "dstack",
      "attestation": true,
      "decryption": true,
      "secrets": [
        "DISCORD_BOT_TOKEN",
        "TELEGRAM_BOT_TOKEN",
        "TWITTER_BEARER_TOKEN"
      ]
    }
  },
  "lander": {
    "enabled": true,
    "type": "onboarding",
    "buildDir": "dist/web",
    "routes": {
      "/": "landing",
      "/onboard": "onboarding wizard",
      "/configure": "settings",
      "/chat": "chat interface"
    }
  },
  "release": {
    "type": "static",
    "platforms": [],
    "hasDownloads": false
  },
  "decentralization": {
    "worker": {
      "name": "otto-api",
      "entrypoint": "api/worker.ts",
      "runtime": "workerd",
      "memory": 512,
      "timeout": 60000,
      "compatibilityDate": "2025-06-01",
      "routes": [
        { "pattern": "/api/*" },
        { "pattern": "/a2a/*" },
        { "pattern": "/mcp/*" },
        { "pattern": "/webhooks/*" },
        { "pattern": "/health" }
      ],
      "tee": {
        "required": false,
        "preferred": true,
        "platforms": ["dstack", "phala"]
      }
    },
    "cdn": {
      "enabled": true,
      "regions": [
        "global"
      ],
      "cacheRules": [
        {
          "pattern": "/static/**",
          "ttl": 31536000,
          "immutable": true
        },
        {
          "pattern": "/api/**",
          "ttl": 0
        },
        {
          "pattern": "/webhooks/**",
          "ttl": 0
        }
      ],
      "serviceWorker": false
    },
    "frontend": {
      "ipfs": true,
      "arweave": true,
      "jnsName": "otto.jeju",
      "buildDir": "dist/web",
      "spa": true
    },
    "robustness": {
      "multiOrigin": true,
      "offlineSupport": false,
      "p2pFallback": true,
      "contentAddressed": true
    }
  },
  "testing": {
    "unit": {
      "command": "bun run test:unit",
      "timeout": 120000
    },
    "e2e": {
      "command": "bun run test:e2e",
      "timeout": 300000,
      "requiresServices": true
    },
    "synpress": {
      "command": "bun run test:synpress",
      "timeout": 300000,
      "requiresChain": true
    }
  },
  "architecture": {
    "type": "hybrid"
  }
}

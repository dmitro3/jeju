{
  "$schema": "../../packages/config/jeju-manifest.schema.json",
  "name": "bazaar",
  "displayName": "Bazaar",
  "version": "1.0.0",
  "type": "core",
  "description": "Unified DeFi + NFT + Token Launchpad - Uniswap V4 swaps, liquidity pools, NFT trading, JNS name marketplace, and multi-chain token creation",
  "commands": {
    "dev": "bun run dev",
    "build": "bun run build",
    "start": "bun run start",
    "test": "bun run test"
  },
  "ports": {
    "main": 4006
  },
  "dependencies": ["contracts", "config", "dws"],
  "optional": false,
  "enabled": true,
  "autoStart": true,
  "tags": ["defi", "nft", "marketplace", "uniswap-v4", "launchpad", "multi-chain", "jns", "names", "core"],
  "jns": {
    "name": "bazaar.jeju",
    "description": "DeFi + NFT + Names Marketplace",
    "url": "https://bazaar.jeju.network"
  },
  "healthCheck": {
    "url": "http://localhost:4006",
    "interval": 30000
  },
  "agent": {
    "enabled": true,
    "a2aEndpoint": "/api/a2a",
    "mcpEndpoint": "/api/mcp",
    "tags": ["jeju-app", "defi", "nft", "marketplace", "launchpad", "jns"],
    "metadata": {
      "category": "defi",
      "provider": "jeju-network",
      "features": ["swap", "liquidity", "nft-trading", "token-launch", "jns-names"]
    },
    "trustModels": ["open"],
    "x402Support": true,
    "jnsName": "bazaar.jeju"
  },
  "decentralization": {
    "cdn": {
      "enabled": true,
      "regions": ["global"],
      "cacheRules": [
        { "pattern": "/_next/static/**", "ttl": 31536000, "immutable": true },
        { "pattern": "/api/prices/**", "ttl": 5 },
        { "pattern": "/api/pools/**", "ttl": 10, "staleWhileRevalidate": 60 },
        { "pattern": "/api/**", "ttl": 0 },
        { "pattern": "/**/*.html", "ttl": 60, "staleWhileRevalidate": 3600 }
      ],
      "apiCaching": {
        "enabled": true,
        "defaultTtl": 10,
        "varyHeaders": ["x-jeju-address"]
      },
      "serviceWorker": true
    },
    "frontend": {
      "ipfs": true,
      "arweave": true,
      "jnsName": "bazaar.jeju",
      "buildDir": ".next",
      "spa": false
    },
    "robustness": {
      "multiOrigin": true,
      "offlineSupport": true,
      "p2pFallback": true,
      "contentAddressed": true
    }
  },
  "testing": {
    "unit": {
      "command": "bun run test:unit",
      "timeout": 120000
    },
    "e2e": {
      "command": "bunx playwright test tests/e2e",
      "timeout": 300000,
      "requiresChain": true
    },
    "wallet": {
      "command": "bunx playwright test tests/wallet --config=synpress.config.ts",
      "timeout": 600000,
      "requiresChain": true,
      "requiresWallet": true
    },
    "services": ["contracts", "indexer"]
  }
}

{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "declaration": false,
    "declarationMap": false,
    "paths": {
      "@/*": ["./*"],
      "@/components/*": ["./web/components/*"],
      "@/lib/*": ["./lib/*"],
      "@/hooks/*": ["./web/hooks/*"],
      "@/config/*": ["./web/config/*"]
    }
  },
  "include": ["api/**/*.ts", "web/**/*.ts", "web/**/*.tsx", "lib/**/*.ts", "types/**/*.ts", "scripts/**/*.ts"],
  "exclude": ["node_modules", "tests/**/*", "api/__tests__/**", "**/*.test.ts", "dist", "web/lib", "web/types"]
}

{
  "$schema": "../../packages/config/jeju-manifest.schema.json",
  "name": "experimental-dapp",
  "displayName": "Experimental Decentralized App",
  "version": "1.0.0",
  "type": "app",
  "description": "End-to-end demonstration of all decentralized services: JNS, Storage, Compute, CQL, Cron, Cache, REST, A2A, MCP, and KMS. A fully decentralized Todo List application.",
  "commands": {
    "dev": "bun run src/server/index.ts",
    "dev:frontend": "bun run --hot src/frontend/dev.ts",
    "build": "bun run build.ts",
    "start": "bun run dist/server/index.js",
    "test": "bun test",
    "test:e2e": "bun run src/tests/e2e.test.ts",
    "deploy": "bun run deploy.ts",
    "migrate": "bun run src/db/migrate.ts"
  },
  "ports": {
    "main": 4500,
    "frontend": 4501
  },
  "dependencies": ["contracts", "config"],
  "optional": true,
  "enabled": true,
  "autoStart": false,
  "tags": ["experimental", "demo", "todo", "full-stack", "decentralized", "a2a", "mcp", "cql", "kms", "jns", "storage", "compute", "cron", "cache"],
  "jns": {
    "name": "todo.jeju",
    "description": "Decentralized Todo List",
    "url": "https://todo.jeju.network"
  },
  "healthCheck": {
    "url": "http://localhost:4500/health",
    "interval": 30000
  },
  "agent": {
    "enabled": true,
    "a2aEndpoint": "/a2a",
    "mcpEndpoint": "/mcp",
    "tags": ["jeju-app", "todo", "experimental", "demo"],
    "metadata": {
      "category": "productivity",
      "provider": "jeju-network",
      "features": ["full-decentralization", "ai-integration", "scheduled-tasks", "encrypted-data"]
    },
    "trustModels": ["open", "staked"],
    "x402Support": true,
    "multiTokenPayments": true,
    "jnsName": "todo.jeju"
  },
  "services": {
    "database": {
      "type": "cql",
      "databaseId": "todo-db"
    },
    "cache": {
      "type": "compute",
      "provider": "redis-compatible"
    },
    "storage": {
      "type": "ipfs",
      "tier": "hot"
    },
    "secrets": {
      "type": "kms",
      "provider": "mpc"
    },
    "triggers": {
      "type": "cron",
      "schedules": ["cleanup", "reminders", "sync"]
    }
  },
  "testing": {
    "e2e": {
      "command": "bun run src/tests/e2e.test.ts",
      "timeout": 120000,
      "requiresChain": true
    }
  }
}


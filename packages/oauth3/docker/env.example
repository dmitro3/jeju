# OAuth3 Deployment Configuration
# Copy to .env and fill in values

# ===========================================
# Chain Configuration
# ===========================================
# localnet: 420691, testnet: 420690, mainnet: 420692
CHAIN_ID=420690

# RPC URLs (defaults based on CHAIN_ID if not set)
JEJU_TESTNET_RPC_URL=https://testnet.jeju.network
JEJU_MAINNET_RPC_URL=https://mainnet.jeju.network

# ===========================================
# TEE Configuration
# ===========================================
# Options: dstack, phala, simulated
TEE_MODE=phala

# Phala Configuration (for TEE_MODE=phala)
PHALA_CLUSTER_ID=
PHALA_WORKER_PUBKEY_1=
PHALA_WORKER_PUBKEY_2=
PHALA_WORKER_PUBKEY_3=
PHALA_MAINNET_CLUSTER_ID=
PHALA_MAINNET_WORKER_PUBKEY_1=
PHALA_MAINNET_WORKER_PUBKEY_2=
PHALA_MAINNET_WORKER_PUBKEY_3=

# ===========================================
# Storage Configuration (DWS)
# ===========================================
# DWS provides IPFS-compatible storage API
# Local: http://localhost:4030/storage/api/v0
# Testnet: https://dws.testnet.jeju.network/storage/api/v0
# Mainnet: https://dws.jeju.network/storage/api/v0
DWS_URL=https://dws.testnet.jeju.network
IPFS_API_ENDPOINT=https://dws.testnet.jeju.network/storage/api/v0
IPFS_GATEWAY_ENDPOINT=https://dws.testnet.jeju.network/storage/ipfs

# ===========================================
# JNS Configuration
# ===========================================
JNS_GATEWAY=https://jns.testnet.jeju.network
JNS_MAINNET_GATEWAY=https://jns.jeju.network

# ===========================================
# OAuth Provider Credentials
# Register apps at each provider's developer portal
# ===========================================

# Google OAuth
OAUTH_GOOGLE_CLIENT_ID=
OAUTH_GOOGLE_CLIENT_SECRET=

# GitHub OAuth
OAUTH_GITHUB_CLIENT_ID=
OAUTH_GITHUB_CLIENT_SECRET=

# Twitter/X OAuth 2.0
OAUTH_TWITTER_CLIENT_ID=
OAUTH_TWITTER_CLIENT_SECRET=

# Discord OAuth
OAUTH_DISCORD_CLIENT_ID=
OAUTH_DISCORD_CLIENT_SECRET=

# ===========================================
# Farcaster Configuration
# ===========================================
# Get API key from Neynar: https://neynar.com
NEYNAR_API_KEY=
FARCASTER_HUB_URL=https://hub.pinata.cloud

# ===========================================
# MPC Configuration
# ===========================================
MPC_ENABLED=true
MPC_THRESHOLD=2
MPC_TOTAL_PARTIES=3

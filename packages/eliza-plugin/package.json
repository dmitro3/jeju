{
  "name": "@jejunetwork/eliza-plugin",
  "version": "0.1.0",
  "description": "ElizaOS plugin for Jeju Network - fully decentralized compute, storage, DeFi, governance, and cross-chain",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "rm -rf dist && tsc",
    "test": "bun test",
    "typecheck": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/elizaos/jeju.git",
    "directory": "packages/eliza-plugin"
  },
  "keywords": [
    "jeju",
    "elizaos",
    "eliza",
    "plugin",
    "ai",
    "agent",
    "web3",
    "defi"
  ],
  "dependencies": {
    "@elizaos/core": "1.7.0",
    "@jejunetwork/config": "workspace:*",
    "@jejunetwork/db": "workspace:*",
    "@jejunetwork/sdk": "workspace:*",
    "@jejunetwork/types": "workspace:*",
    "uuid": "^10.0.0",
    "viem": "2.43.3"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "5.9.3"
  },
  "peerDependencies": {
    "@elizaos/core": ">=1.0.0",
    "zod": "^4.0.0"
  },
  "peerDependenciesMeta": {
    "@elizaos/core": {
      "optional": false
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "agentConfig": {
    "pluginType": "elizaos:plugin:1.0.0",
    "pluginParameters": {
      "JEJU_PRIVATE_KEY": {
        "type": "string",
        "description": "Private key for Jeju wallet (hex string starting with 0x)",
        "required": true,
        "sensitive": true
      },
      "JEJU_MNEMONIC": {
        "type": "string",
        "description": "Mnemonic phrase for Jeju wallet (alternative to private key)",
        "required": false,
        "sensitive": true
      },
      "JEJU_NETWORK": {
        "type": "string",
        "description": "Network to connect to: localnet, testnet, or mainnet",
        "required": false,
        "default": "testnet",
        "sensitive": false
      },
      "JEJU_SMART_ACCOUNT": {
        "type": "boolean",
        "description": "Enable ERC-4337 smart account (default: true)",
        "required": false,
        "default": true,
        "sensitive": false
      }
    }
  }
}

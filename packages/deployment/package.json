{
  "name": "@jejunetwork/deployment",
  "version": "0.1.0",
  "private": true,
  "description": "Decentralized deployment for Jeju Network (DWS, IPFS, on-chain)",
  "type": "module",
  "exports": {
    ".": "./scripts/serverless/index.ts"
  },
  "scripts": {
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "dev": "bun run scripts/serverless/local-server.ts",
    "deploy": "bun run scripts/deploy/dws-bootstrap.ts",
    "deploy:testnet": "NETWORK=testnet bun run scripts/deploy/dws-bootstrap.ts",
    "deploy:mainnet": "NETWORK=mainnet bun run scripts/deploy/dws-bootstrap.ts",
    "deploy:testnet-babylon": "NETWORK=testnet bun run scripts/deploy/testnet-babylon-full.ts",
    "deploy:full": "NETWORK=testnet bun run scripts/deploy/testnet-full-deployment.ts",
    "verify": "bun run scripts/serverless/deploy.ts --verify",
    "verify:testnet": "NETWORK=testnet bun run scripts/deploy/verify-testnet-babylon.ts",
    "verify:testnet-verbose": "NETWORK=testnet bun run scripts/deploy/verify-testnet-babylon.ts --verbose",
    "preflight:testnet": "bun run scripts/deploy/testnet-preflight.ts",
    "update-contracts": "bun run scripts/deploy/update-testnet-contracts.ts",
    "deploy:contracts": "bun run scripts/deploy/deploy-testnet-contracts.ts",
    "deploy:contracts-dry": "bun run scripts/deploy/deploy-testnet-contracts.ts --dry-run"
  },
  "dependencies": {
    "@jejunetwork/dws": "workspace:*",
    "@jejunetwork/shared": "workspace:*",
    "@jejunetwork/types": "workspace:*",
    "elysia": "^1.4.19",
    "hono": "^4.7.12",
    "viem": "2.43.3",
    "zod": "4.2.1"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "@jejunetwork/config": ">=0.1.0"
  }
}

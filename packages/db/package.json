{
  "name": "@jejunetwork/db",
  "version": "0.1.0",
  "description": "Database Integration for Jeju Network - Powered by CovenantSQL",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./adapters": {
      "types": "./dist/adapters/index.d.ts",
      "import": "./dist/adapters/index.js"
    }
  },
  "files": ["dist", "src"],
  "sideEffects": false,
  "scripts": {
    "build": "tsc",
    "test": "bun test",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.2.0",
    "@jejunetwork/config": "workspace:*",
    "@jejunetwork/types": "workspace:*",
    "elysia": "^1.4.19",
    "generic-pool": "^3.9.0",
    "pino": "^10.1.0",
    "viem": "2.43.3",
    "zod": "4.2.1"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "5.9.3"
  },
  "peerDependenciesMeta": {
    "typeorm": { "optional": true }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/elizaos/jeju.git",
    "directory": "packages/db"
  },
  "publishConfig": {
    "access": "public"
  }
}

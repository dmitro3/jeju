    "capnp-es": "0.0.11",
    "chrome-remote-interface": "0.33.3",
    "esbuild": "0.27.2",
    "eslint": "9.39.2",
    "expect-type": "1.3.0",
    "typescript-eslint": "8.50.1"
  }

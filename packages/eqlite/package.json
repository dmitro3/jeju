{
  "name": "@jejunetwork/eqlite",
  "version": "0.2.0",
  "type": "module",
  "description": "EQLite for Jeju Network - Decentralized SQL database with BFT consensus",
  "keywords": [
    "EQLite",
    "EQLite",
    "database",
    "decentralized",
    "SQL",
    "blockchain",
    "jeju",
    "typescript"
  ],
  "main": "./driver/dist/index.js",
  "module": "./driver/dist/index.js",
  "types": "./driver/dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./driver/dist/index.js",
      "types": "./driver/dist/index.d.ts"
    },
    "./driver": {
      "import": "./driver/dist/index.js",
      "types": "./driver/dist/index.d.ts"
    },
    "./pool": {
      "import": "./driver/dist/ConnectionPool.js",
      "types": "./driver/dist/ConnectionPool.d.ts"
    },
    "./discovery": {
      "import": "./driver/dist/Discovery.js",
      "types": "./driver/dist/Discovery.d.ts"
    }
  },
  "files": [
    "driver/dist",
    "driver/src",
    "jeju",
    "README.md",
    "JEJU_INTEGRATION.md"
  ],
  "scripts": {
    "build": "cd driver && bun build ./src/index.ts ./src/ConnectionPool.ts ./src/Discovery.ts ./src/Transaction.ts --outdir ./dist --format esm && tsc --emitDeclarationOnly --declaration --declarationDir dist",
    "build:go": "go build ./...",
    "dev": "cd driver && bun build ./src/index.ts --outdir ./dist --format esm --watch",
    "test": "cd driver && bun test",
    "test:go": "go test ./...",
    "clean": "rm -rf driver/dist",
    "typecheck": "cd driver && tsc --noEmit",
    "prepublishOnly": "bun run clean && bun run build"
  },
  "dependencies": {
    "sql92-string": "^1.0.1"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18",
    "bun": ">=1.0.0"
  },
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/jejunetwork/jeju",
    "directory": "packages/eqlite"
  },
  "bugs": {
    "url": "https://github.com/jejunetwork/jeju/issues"
  },
  "homepage": "https://github.com/jejunetwork/jeju/tree/main/packages/eqlite#readme"
}


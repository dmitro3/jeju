{
  "name": "@jejunetwork/token",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Cross-chain token deployment and Hyperlane Warp Routes for JEJU and custom tokens",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:contracts": "forge build --root contracts",
    "test": "bun test src/tests/*.test.ts",
    "test:contracts": "forge test --root contracts -vvv",
    "deploy": "jeju token deploy:jeju",
    "deploy:local": "jeju token deploy:jeju --network localnet",
    "deploy:testnet": "jeju token deploy:testnet",
    "deploy:testnet:dry-run": "jeju token deploy:testnet --dry-run",
    "deploy:hyperlane:jeju": "jeju token deploy:hyperlane --network testnet",
    "deploy:hyperlane:jeju:dry-run": "jeju token deploy:hyperlane --network testnet --dry-run",
    "deploy:solana": "jeju token deploy:solana --network devnet",
    "deploy:solana:dry-run": "jeju token deploy:solana --network devnet --dry-run",
    "deploy:ecosystem": "jeju token deploy:ecosystem",
    "deploy:verify": "jeju token verify",
    "demo": "bun run src/cli/demo.ts",
    "typecheck": "tsc --noEmit",
    "lint": "biome check src/",
    "check": "bun run typecheck && bun run lint && bun run test",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "viem": "2.41.2",
    "@solana/web3.js": "1.98.4",
    "@solana/spl-token": "0.4.13",
    "@coral-xyz/anchor": "0.30.1",
    "bs58": "6.0.0",
    "commander": "12.1.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "5.7.3"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}

{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "noEmit": true,
    "composite": false,
    "incremental": false,
    "paths": {
      "@/*": ["./*"],
      "@types/*": ["./types/*"],
      "@scripts/*": ["./scripts/*"],
      "@contracts/*": ["./packages/contracts/*"],
      "@config/*": ["./packages/config/*"],
      "@tests/*": ["./packages/tests/*"],
      "@indexer/*": ["./apps/indexer/*"]
    }
  },
  "include": [
    "scripts/**/*.ts",
    "types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    ".terraform",
    "vendor",
    "8004",
    "**/*.test.ts"
  ]
}

{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "noEmit": true,
    "composite": false,
    "incremental": false,
    "paths": {
      "@/*": ["./*"],
      "@types/*": ["./packages/types/*"],
      "@scripts/*": ["./packages/deployment/scripts/*"],
      "@contracts/*": ["./packages/contracts/*"],
      "@config/*": ["./packages/config/*"],
      "@tests/*": ["./packages/tests/*"],
      "@indexer/*": ["./apps/indexer/*"]
    }
  },
  "include": ["**/*.d.ts", "packages/types/**/*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    ".terraform",
    "vendor",
    "vendor_examples",
    "packages/workerd",
    "packages/workerd-original",
    "**/bazel-*",
    "8004",
    "**/*.test.ts"
  ]
}
